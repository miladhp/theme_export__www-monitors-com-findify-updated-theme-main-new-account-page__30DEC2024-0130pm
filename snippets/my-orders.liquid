<div class="order-container">
    {% paginate customer.orders by 10 %}
        {% if customer.orders.size > 0 %}
            {%- for order in customer.orders -%}

            {% comment %} code to extract tracking numbers and tracking urls from line items  {% endcomment %}
            {%- assign unique_tracking_pairs = '' -%}
            {% assign order_status = "" %}

            {%- for line_item in order.line_items -%}
            {%- if line_item.fulfillment.tracking_number and line_item.fulfillment.tracking_url -%}
                {%- assign tracking_number = line_item.fulfillment.tracking_number -%}
                {%- assign tracking_url = line_item.fulfillment.tracking_url -%}
                
                {%- assign tracking_pair = tracking_number | append: '~' | append: tracking_url -%}

                {%- unless unique_tracking_pairs contains tracking_pair -%}
                {%- assign unique_tracking_pairs = unique_tracking_pairs | append: tracking_pair | append: ',' -%}
                {%- endunless -%}
            {%- endif -%}
            {%- endfor -%}

            {%- assign unique_tracking_pairs_array = unique_tracking_pairs | split: ',' -%}

                {%- capture tracking_links -%}
                    {%- for pair in unique_tracking_pairs_array -%}
                    {%- if pair != '' -%}
                        {%- assign parts = pair | split: '~' -%}
                        <a href="{{ parts[1] }}" target="_blank">{{ parts[0] }}</a>
                        {%- if forloop.last == false -%},
                        {%- endif -%}
                    {%- endif -%}
                    {%- endfor -%}
                {%- endcapture -%}

            {% comment %} end tracking code {% endcomment %}
            
            {% comment %} code for order status {% endcomment %}

            {% if order.cancelled_at %}
                {% assign order_status = "Canceled" %}
    
            {% else %}
            {% case order.financial_status %}
                {% when 'paid' %}
                    {% assign order_status = "Paid" %}
                {% when 'pending' %}
                    {% assign order_status = "Payment Pending" %}
                {% when 'authorized' %}
                    {% assign order_status = "Authorized but not captured" %}
                {% when 'partially_paid' %}
                    {% assign order_status = "Partially Paid" %}
                {% when 'refunded' %}
                    {% assign order_status = "Refunded" %}
                {% when 'partially_refunded' %}
                    {% assign order_status = "Partially Refunded" %}
                {% else %}
                    {% assign order_status = order.financial_status %}
                {% endcase %}
            {% endif %}

            {% case order.fulfillment_status %}
                {% when 'fulfilled' %}
                    {% assign order_status = "Shipped" %}
                {% when 'unfulfilled' %}
                    {% if order_status == "Paid" %}
                        {% assign order_status = "Paid (Shipment pending)" %}
                    {% endif %}
            {% endcase %}

            {% comment %} end status code {% endcomment %}

            <div class="order-item">
                <div class="order-header">
                        <div class="order-details">
                            <div class="header-tab-cta">
                                <div>
                                    <svg class="drop-icon" xmlns="http://www.w3.org/2000/svg" width="16" height="9" viewBox="0 0 16 9" fill="none">
                                        <path fill-rule="evenodd" clip-rule="evenodd" d="M0.35946 8.64054C0.83874 9.11982 1.61581 9.11982 2.09509 8.64054L7.77273 2.9629L13.4504 8.64054C13.9296 9.11982 14.7067 9.11982 15.186 8.64054C15.6653 8.16126 15.6653 7.38419 15.186 6.90491L8.64054 0.35946C8.16126 -0.11982 7.38419 -0.11982 6.90491 0.35946L0.35946 6.90491C-0.11982 7.38419 -0.11982 8.16126 0.35946 8.64054Z" fill="#4A4A4A"/>
                                        </svg>
                                </div>
                                
                                <div class="details-item">
                                    <p>Order Number:</p>
                                    <p class="details">
                                        {{ order.name }}
                                    </p>
                                </div>
                            </div>
                            <div class="details-item">
                                <p>PO#:</p>
                                {% if order.metafields.checkoutblocks.order_po_number != blank %}
                                    <p class="details po-box">
                                        {{ order.metafields.checkoutblocks.order_po_number }}
                                    </p>
                                {% else %}
                                    <p class="details po-box">
                                        N/A
                                    </p>
                                {% endif %}
                            </div>
                        <div class="details-item">
                            <p>Order Placed:</p>
                            <p class="details">
                                {{ order.created_at | date: "%b %d, %Y" }}
                            </p>
                        </div>
                        <div class="details-item address-on-hover">
                            <p>Ship to:</p>
                            <p class="details name">
                                {% if order.shipping_address.first_name != blank %}
                                    {{ order.shipping_address.first_name }} 
                                {% else %}
                                    {{ customer.first_name }}
                                {% endif %}
                                
                                <svg style="margin: 0px 0px 1px 2px;" xmlns="http://www.w3.org/2000/svg" width="10" height="6" viewBox="0 0 10 6" fill="none">
                                    <path fill-rule="evenodd" clip-rule="evenodd" d="M0.21967 0.46967C0.512563 0.176777 0.987437 0.176777 1.28033 0.46967L4.75 3.93934L8.21967 0.46967C8.51256 0.176777 8.98744 0.176777 9.28033 0.46967C9.57322 0.762563 9.57322 1.23744 9.28033 1.53033L5.28033 5.53033C4.98744 5.82322 4.51256 5.82322 4.21967 5.53033L0.21967 1.53033C-0.0732233 1.23744 -0.0732233 0.762563 0.21967 0.46967Z" fill="#4A4A4A"/>
                                </svg>
                            </p>
                            <div class="address-hover-container">
                                <div class="arrow-icon">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="21" height="13" viewBox="0 0 21 13" fill="none">
                                        <path d="M1.5 11L10.5 2L19.4999 11" stroke="#E5E5E5" stroke-width="2"/>
                                        <path d="M10.5 2L0 12.5L20.5 12L10.5 2Z" fill="white"/>
                                      </svg>
                                </div>
                                <div class="hover-address">
                                   <p class="name">
                                        {{ order.shipping_address.first_name }} {{ order.shipping_address.last_name }}
                                   </p>
                                    <p>{{ order.shipping_address.address1 }}</p>
                                    <p>{{ order.shipping_address.address2 }}</p>
                                    <p>{{ order.shipping_address.city }} {{ order.shipping_address.province }} {{ order.shipping_address.zip }}</p>
                                    <p>{{ order.shipping_address.country }}</p>    
                                </div>
                            </div>
                        </div>
                        <div class="details-item">
                            <p>Grand Total:</p>
                            <p class="details">
                                {{ order.total_price | money }}
                            </p>
                        </div>
                        <div class="details-item">
