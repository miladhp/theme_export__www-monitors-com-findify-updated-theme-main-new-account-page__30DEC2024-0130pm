        justify-content: center;
        align-items: center;
    }
    .account-handler-popup .delete-address .popup-btns button{
        text-align: center;
        font-family: 'Encode Sans';
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: normal;
        border-radius: 5px;
        border: none;
        padding: 8px 30px;
        color: #fcf7f7;
        background: #06a0e3;
