<div class="custom-account-form-header">
    <p class="custom-account-form-header-title">Update your password for</p>
    <p class="custom-account-customer-email">{{ customer.email }}</p>
  </div>
  
  <form id="custom-password-form" class="custom-password-form custom-read-input" accept-charset="UTF-8" data-customer-id={{ customer.id }}>
     <div class="form-row">
      <div class="form-col">
          <label for="new_password">New Password</label>
          <div class="custom-password-wrapper">
              <input class="custom-account-input" type="password" id="new_password" name="new_password" />
              <button type="button" class="toggle-password" onclick="togglePassword('new_password')">
                <svg width="15" height="16" viewBox="0 0 15 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <g clip-path="url(#clip0_12_6808)">
                      <path d="M0.625 8C0.625 8 3.125 3 7.5 3C11.875 3 14.375 8 14.375 8C14.375 8 11.875 13 7.5 13C3.125 13 0.625 8 0.625 8Z" stroke="#A3A1A1" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M7.5 9.875C8.53553 9.875 9.375 9.03553 9.375 8C9.375 6.96447 8.53553 6.125 7.5 6.125C6.46447 6.125 5.625 6.96447 5.625 8C5.625 9.03553 6.46447 9.875 7.5 9.875Z" stroke="#A3A1A1" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                      </g>
                      <defs>
                      <clipPath id="clip0_12_6808">
                      <rect width="15" height="15" fill="white" transform="translate(0 0.5)"/>
                      </clipPath>
                      </defs>
                 </svg>
              </button>
          </div>
          
          <div id="new_password_error" class="error-message" style="color: red; display: none;"></div>
      </div>
     </div>
  
     <div class="form-row">
      <div class="form-col">
          <label for="confirm_password">Confirm New Password</label>
          <div class="custom-password-wrapper">
              <input class="custom-account-input" type="password" id="confirm_password" name="confirm_password" />
              <button type="button" class="toggle-password" onclick="togglePassword('confirm_password')">
                <svg width="15" height="16" viewBox="0 0 15 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <g clip-path="url(#clip0_12_6808)">
                      <path d="M0.625 8C0.625 8 3.125 3 7.5 3C11.875 3 14.375 8 14.375 8C14.375 8 11.875 13 7.5 13C3.125 13 0.625 8 0.625 8Z" stroke="#A3A1A1" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                      <path d="M7.5 9.875C8.53553 9.875 9.375 9.03553 9.375 8C9.375 6.96447 8.53553 6.125 7.5 6.125C6.46447 6.125 5.625 6.96447 5.625 8C5.625 9.03553 6.46447 9.875 7.5 9.875Z" stroke="#A3A1A1" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/>
                      </g>
                      <defs>
                      <clipPath id="clip0_12_6808">
                      <rect width="15" height="15" fill="white" transform="translate(0 0.5)"/>
                      </clipPath>
                      </defs>
                 </svg>
              </button>
          </div>
        
          <div id="confirm_password_error" class="error-message" style="color: red; display: none;"></div>
      </div>
     </div>
  
      <div id="main-error-message" class="error-message" style="color: red; display: none;"></div>   
                        
     <button type="submit" class="custom-account-submit-button">Save changes</button>
  </form>
  
  <script>
  
  
  
    function togglePassword(fieldId) {
      var field = document.getElementById(fieldId);
      if (field.type === "password") {
        field.type = "text";
        field.nextElementSibling.classList.add('active');
      } else {
        field.type = "password";
        field.nextElementSibling.classList.remove('active');
      }
    }
  
  </script>
  
  <style>
    .custom-password-wrapper {
      position: relative;
      display: flex;
      align-items: center;
      min-width: 288px;
    }
    
    .toggle-password {
      position: absolute;
      right: 10px;
      background: none;
      border: none;
      cursor: pointer;
      outline: none;
      display: flex;
    }
  
  </style>
  