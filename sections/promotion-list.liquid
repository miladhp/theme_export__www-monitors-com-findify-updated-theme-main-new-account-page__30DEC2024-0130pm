<section class="section sec-promo" data-section-id="{{ section.id }}" data-section-type="promo-block">
  <div class="container">
    {%- capture block_list -%}
      <div class="block-list">
        {%- for block in section.blocks -%}
          <div id="block-{{ block.id }}" class="block-list__item {% if section.settings.expand_items %}block-list__item--grow{% endif %} 1/2--tablet-and-up 1/3--desk {% if template == 'index' %}1/4--desk {% endif %}" {{ block.shopify_attributes }}>
            <a
              {% if block.settings.button_link %} href="{{ block.settings.button_link }}" {% endif %}
              class="promo-block promo-block--{{ block.settings.content_position | replace: '_', '-' }} {% if block.settings.show_overlay %}promo-block--overlay{% endif %} promo-block--{{ section.settings.section_size }} {% if block.settings.bg_image != blank %} lazy-background-image skeleton {% endif %}"
              {% if block.settings.bg_image != blank %}
                data-background-image="{{ block.settings.bg_image | img_url: '' }}"
              {% endif %}
            >
              {%- if block.settings.image -%}
                <div class="promo-block__image-clip">
                  {%- capture supported_sizes -%}{%- render 'image-size', sizes: '200,300,400,500,600,700,800,900,1000,1100,1200', image: block.settings.image -%}{%- endcapture -%}
                  
                  <img
                    width="200"
                    height="183"
                    class=""
                    loading="lazy"
                    data-sizes="auto"
                    data-widths="[{{ supported_sizes }}]"
                    src="{{ block.settings.image | img_url: 'medium' }}"
                    alt=""
                  >

                </div>
              {%- endif -%}

              <div class="promo-block__inner">
                <div>
                  {%- if block.settings.title != blank -%}
                    <p class="promo-block__heading heading h3">{{ block.settings.title | escape }}</p>
                  {%- endif -%}

                  {%- if block.settings.content != blank -%}
                    <p class="promo-block__content">{{ block.settings.content | escape | newline_to_br }}</p>
                  {%- endif -%}
                </div>
                {%- if block.settings.button_text != blank -%}
                  <span class="promo-block__cta button button--floating">{{ block.settings.button_text | escape }}</span>
                {%- endif -%}
              </div>

              <style>
                #block-{{ block.id }} .promo-block {
                  background-color: {{ block.settings.background }};
                  {% if block.settings.bg_image != blank %}
                    background-position: center center;
                    background-repeat: no-repeat;
                    background-size: cover;
                  {% endif %}
                  color: {{ block.settings.text_color }};
                  border-radius: 10px;
                }
                #block-{{ block.id }} .button {
                  background: {{ block.settings.button_background }};
                  color: {{ block.settings.button_text_color }};
                  border: 1px solid #e1e3e4;
                }
                {%- if block.settings.show_overlay -%}
                  #block-{{ block.id }} .promo-block--overlay::before {
                    {%- assign overlay_opacity = block.settings.overlay_opacity | divided_by: 100.0 -%}
                    background: linear-gradient(to top, rgba(0, 0, 0, 0) 15%, {{ '#000000' | color_modify: 'alpha', overlay_opacity }});
                  }
                {%- endif -%}
              </style>

              {%- if block.settings.image -%}
                <noscript>
                  <style>
                    #block-{{ block.id }} .promo-block__image-wrapper {
                      background-image: url({% if block.settings.stretch_image %}{{ block.settings.image | img_url: '800x' }}{% else %}{{ block.settings.image | img_url: 'x400' }}{% endif %});
                    }
                  </style>
                </noscript>
              {%- endif -%}
            </a>
          </div>
        {%- endfor -%}
      </div>
    {%- endcapture -%}

    {%- if section.settings.stack_mobile -%}
      {{ block_list }}
    {%- else -%}
      <div class="scroller">
        <div class="scroller__inner">
          {{ block_list }}
        </div>
      </div>
    {%- endif -%}
  </div>
</section>

