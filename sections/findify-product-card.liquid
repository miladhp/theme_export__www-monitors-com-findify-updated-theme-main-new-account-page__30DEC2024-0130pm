{%- liquid
  assign page_url = content_for_header | split: '"pageurl":"' | last | split: '"' | first | split: request.host | last | replace: "\/", "/" | replace: "\u0026", "&"
  assign findify_product = page_url | split: "sections=findify-product-card&" | last
  include 'findify-product-card-params'
-%}

{%- render 'findify-product-card'
  , id: id
  , class: class
  , widget: widget
  , page: page
  , product_url: product_url
  , current_variant: current_variant,
  , product: product,
  , showHoverImage: showHoverImage
  , brand: brand,
  , reviews: reviews
  , reviews_count: reviews_count
  , selected_variant_id: selected_variant_id
  , colormap: colormap
  , variants: variants
  , showColorSwatchesOnDesktop: showColorSwatchesOnDesktop
  , showColorSwatchesOnMobile: showColorSwatchesOnMobile
  , colorSwatchesStyleDesktop: colorSwatchesStyleDesktop
  , colorSwatchesStyleMobile: colorSwatchesStyleMobile
  , colorSwatchesVisibility: colorSwatchesVisibility
-%}
